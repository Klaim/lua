c.std = 99
cxx.std = latest

using c
using cxx

h{*}: extension = h
c{*}: extension = c

cxx{*}: extension = cpp
hxx{*}: extension = hpp
hxx{*}: cxx.importable = false

test.target = $cxx.target

exe{*}: test = true

# Lua Library
#
import lua = liblua%lib{lua}

# Lua Script Files
#
define lua: file
lua{*}: extension = lua
